<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#453C3C"
    android:layout_height="match_parent"
    tools:context=".Activities.HomeActivity">

   <androidx.appcompat.widget.Toolbar
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/toolbar"
       android:background="#FD8427"
       app:title="Music Player"
       app:titleTextColor="@color/white"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent">

       <ImageView
           android:layout_width="@dimen/_24sdp"
           android:layout_height="@dimen/_24sdp"
           android:id="@+id/tbIVSort"
           android:layout_marginRight="@dimen/_10sdp"
           android:src="@drawable/menusort"
           android:layout_gravity="end"
           ></ImageView>
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tbIVSearch"
           android:layout_gravity="end"
           android:src="@drawable/ic_baseline_search_24"></ImageView>
   </androidx.appcompat.widget.Toolbar>


    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablayout"
        android:background="#453C3C"
        android:visibility="invisible"
        app:tabMode="scrollable"
        app:tabTextColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/viewpager"
        app:layout_constraintLeft_toLeftOf="parent">
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/viewpager"
        android:visibility="invisible"
        android:background="#453C3C"
        app:layout_constraintTop_toBottomOf="@+id/tablayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"></androidx.viewpager2.widget.ViewPager2>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="#453C3C"
        android:id="@+id/contraintlayoutbottom"
        app:layout_constraintTop_toBottomOf="@+id/recyclerview"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/_10sdp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/line"
            android:background="#CFCECE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/ivSong"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/songicon"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintLeft_toLeftOf="parent"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSongName"
            android:text="Song Name"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintLeft_toRightOf="@+id/ivSong"
            android:layout_marginLeft="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@+id/ivSong"
            app:layout_constraintRight_toLeftOf="@+id/ivPlay"
            app:layout_constraintBottom_toBottomOf="@+id/ivSong"
            ></TextView>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/ivPlay"
            android:src="@drawable/ic_baseline_play_arrow_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivSong"></ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>