<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#453C3C"
    android:layout_height="match_parent">


    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:background="#453C3C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></Toolbar>

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_250sdp"
        android:id="@+id/ivSong"
        android:src="@drawable/songicon"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></ImageView>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekbar"
        app:layout_constraintTop_toBottomOf="@+id/ivSong"
        android:layout_margin="@dimen/_20sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"></SeekBar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvStartPoint"
        app:layout_constraintTop_toBottomOf="@+id/seekbar"
        android:text="00:00"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintLeft_toLeftOf="@+id/seekbar"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvEndPoint"
        app:layout_constraintTop_toBottomOf="@+id/seekbar"
        app:layout_constraintRight_toRightOf="@+id/seekbar"
        android:textColor="@color/white"
        android:text="00:28"
        android:layout_marginTop="@dimen/_10sdp"></TextView>

    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Name"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekbar"
        app:layout_constraintVertical_bias="0.20999998"></TextView>

    <TextView
        android:id="@+id/tvAlbumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album Name"
        android:textColor="#EAE7E7"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSongName"
        app:layout_constraintVertical_bias="0.19999999"></TextView>
    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:id="@+id/ivPlay"
        app:layout_constraintTop_toBottomOf="@+id/tvAlbumName"
        android:src="@drawable/ic_baseline_pause_24"
        app:layout_constraintRight_toLeftOf="@+id/ivSkipNext"
        app:layout_constraintLeft_toRightOf="@+id/ivSkipPrevious"
        app:layout_constraintBottom_toBottomOf="parent"></ImageView>
    <ImageView
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:id="@+id/ivShuffle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_baseline_shuffle_24"
        app:layout_constraintTop_toBottomOf="@+id/tvAlbumName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"></ImageView>

    <ImageView
        android:id="@+id/ivSkipPrevious"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_baseline_skip_previous_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toRightOf="@+id/ivShuffle"
        app:layout_constraintRight_toRightOf="@+id/ivPlay"
        app:layout_constraintTop_toBottomOf="@+id/tvAlbumName"></ImageView>

    <ImageView
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:id="@+id/ivSkipNext"
        android:src="@drawable/ic_baseline_skip_next_24"
        app:layout_constraintTop_toBottomOf="@+id/tvAlbumName"
        app:layout_constraintRight_toLeftOf="@+id/ivRepeatSong"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivPlay"></ImageView>
    <ImageView
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:id="@+id/ivRepeatSong"
        android:src="@drawable/ic_baseline_repeat_24"
        app:layout_constraintTop_toBottomOf="@+id/tvAlbumName"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="@dimen/_20sdp"
        app:layout_constraintRight_toRightOf="parent"></ImageView>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/line"
        android:background="#CFCECE"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintTop_toBottomOf="@+id/ivPlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageView
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:id="@+id/ivNextSong"
        android:src="@drawable/songicon"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="@dimen/_10sdp"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNextSong"
        android:text="Next: Song"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@+id/ivNextSong"
        app:layout_constraintBottom_toBottomOf="@+id/ivNextSong"
        app:layout_constraintLeft_toRightOf="@+id/ivNextSong"
        android:layout_marginLeft="@dimen/_20sdp"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>