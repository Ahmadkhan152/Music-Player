<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#453C3C"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="#453C3C"
        android:id="@+id/contraintlayoutbottom"
        android:layout_gravity="bottom"
        android:padding="@dimen/_20sdp"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/line"
            android:background="#CFCECE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/ivSong"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/songicon"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintLeft_toLeftOf="parent"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSongName"
            android:text="Song Fragment"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintLeft_toRightOf="@+id/ivSong"
            android:layout_marginLeft="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@+id/ivSong"
            app:layout_constraintBottom_toBottomOf="@+id/ivSong"
            ></TextView>
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:id="@+id/ivPlay"
            android:src="@drawable/ic_baseline_play_arrow_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivSong"></ImageView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>